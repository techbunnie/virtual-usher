{
    "compilerOptions": {
        "target": "ES2022",
        "jsx": "react-jsx",
        "sourceMap": true,
        "moduleResolution": "bundler",
        "module": "ESNext",
        "noEmit": true,

        "allowImportingTsExtensions": true,
        "allowJs": true,

        "typeRoots": [
            "node_modules/@types",
            "src/types",
        ],
        "paths": {
            "@alfred/*": ["./src/*"]
        }
    },
    "include": [
        "src/",
        "**/*.ts",
        "**/*.d.ts",
        "**/*.js",
        "**/*.jsx",
    ]
}
